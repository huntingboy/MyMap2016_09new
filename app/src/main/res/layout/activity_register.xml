<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.nomad.login.RegisterActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名：" > </TextView>

            <EditText
                android:singleLine="true"
                android:id="@+id/edit_register_name" />

        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密    码：" > </TextView>

            <EditText
                android:singleLine="true"
                android:id="@+id/edit_register_password"
                android:inputType="textPassword"/>

        </TableRow>
        <!--<TableRow>-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="性别：" > </TextView>-->

            <!--<EditText android:id="@+id/edit_register_gender" />-->

        <!--</TableRow>-->

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="110dp"
        android:paddingRight="60dp">
        <Button
            style="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:id="@+id/bt_register_ack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"/>
        <Button
            style="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:id="@+id/bt_register_can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"/>
    </LinearLayout>

</LinearLayout>
